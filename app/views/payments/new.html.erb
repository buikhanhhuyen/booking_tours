<%= form_for [@booking, @payment] do |f| %>
  <section class="invoice">
    <div class="row">
      <div class="col-xs-12">
        <h2 class="page-header">
          <i class="fa fa-globe"></i>Framgia.
          <small class="pull-right">Date<%= l Time.now %></small>
        </h2>
      </div>
    </div>
    <div class="row invoice-info">
      <div class="col-sm-4 invoice-col">
        From
        <address>
          <strong>Admin</strong><br>
          34 Ta Quang Buu<br>
          0975123456<br>
          admin@email.com
        </address>
      </div>
      <div class="col-sm-4 invoice-col">
        to
      </div>
      <div class="col-sm-4 invoice-col">
        <b>Booking</b><br>
        <br>
        <b>Booking ID</b><%= @booking.id %><br>
        <b>Payment Date</b><%= l Time.now %><br>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Tour</th>
              <th>Price per person</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @booking.tour.name %></td>
              <td><%= @booking.tour.price %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-6">
        <p class="lead">Term Condition</p>
        <textarea class="text-muted well well-sm no-shadow " rows="6">
          Condition content
        </textarea>
      </div>
      <div class="col-xs-6">
        <p class="lead">Payment Amount</p>
        <div class="table-responsive">
          <table class="table">
            <tr>
              <th>Price per person:</th>
              <td><%= @booking.tour.price %></td>
            </tr>
            <tr>
              <th>Number tourist</th>
              <td><%= @booking.visitors.count %></td>
            </tr>
            <tr>
              <th>Discount</th>
              <td><%#= @booking.discount %>%</td>
            </tr>
            <tr>
              <th>Total price</th>
              <td>
                <label class="label bg-red">
                  <%= @booking.total_price %>
                </label></td>
            </tr>
          </table>
        </div>
      </div>
    </div>
    <%= f.hidden_field :booking_id, value: @booking.id %>
    <%= hidden_field_tag :stripeEmail, @booking.user.email %>
    <%= hidden_field_tag :total_price, @booking.total_price %>
    <div class="row no-print">
      <div class="col-xs-12">
        <button id="customButton" class="btn btn-success pull-right">
          <i class="fa fa-credit-card"></i>Submit
        </button>
      </div>
    </div>
  </section>
<% end %>
