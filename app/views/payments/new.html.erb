
<body class="nav-md">
  <div class="container body">
    <div class="main_container">
      <!-- page content -->
      <div class="right_col" role="main">
        <div class="clearfix"></div>

        <div class="row">
          <div class="col-md-12">
            <div class="x_panel">
              <div class="x_content">
                <%= form_for [@booking, @payment] do |f| %>
                  <section class="content invoice">
                    <!-- title row -->
                    <div class="row">
                      <div class="col-xs-12 invoice-header">
                        <h1>
                          <i class="fa fa-globe"></i> Travel, Inc.
                          <small class="pull-right">Date: <%= Time.now.strftime("%d-%m-%Y") %> </small>
                        </h1>
                      </div>
                      <!-- /.col -->
                    </div>
                    <!-- info row -->
                    <div class="row invoice-info">
                      <div class="col-sm-4 invoice-col">
                        From:
                        <address>
                          <strong>Travel, Inc.</strong>
                          <br>795 Freedom Ave, Suite 600
                          <br>New York, CA 94107
                          <br>Phone: 1 (804) 123-9876
                          <br>Email: awesometravel.com
                        </address>
                      </div>
                      <!-- /.col -->
                      <div class="col-sm-4 invoice-col">
                        To:
                        <address>
                          <strong><%= @booking.user.username %></strong>
                          <br><%= @booking.user.address %>
                          <br>Phone: <%= @booking.user.phone_number %>
                          <br>Email: <%= @booking.user.email %>
                        </address>
                      </div>
                      <!-- /.col -->
                      <div class="col-sm-4 invoice-col">
                        <b>Booking
                        <b>Booking ID:</b> <%= @booking.id %>
                        <br>
                        <b>Payment Date:</b> <%= Time.now.strftime("%d-%m-%Y") %>
                      </div>
                      <!-- /.col -->
                    </div>
                    <!-- /.row -->

                    <!-- Table row -->
                    <div class="row">
                      <div class="col-xs-12 table">
                        <table class="table table-striped">
                          <thead>
                            <tr>
                              <th>Qty</th>
                              <th>Tour ID #</th>
                              <th>Tour Name</th>
                              <th style="width: 40%">Information</th>
                              <th>Tour Price</th>
                            </tr>
                          </thead>
                          <tbody>
                            <tr>
                              <td><%= @booking.visitors.count %></td>
                              <td><%= @booking.tour.id %></td>
                              <td><%= @booking.tour.name %></td>
                              <td>
                                Duration: <%= (@booking.tour.end_date - @booking.tour.start_date)/86400 %> days
                                <br>
                                Start at <%= @booking.tour.start_place.name %> on <%= @booking.tour.start_date.strftime("%d-%m-%Y") %>
                                <br>
                                End at <%= @booking.tour.end_place.name %> on <%= @booking.tour.end_date.strftime("%d-%m-%Y") %>
                                <br>
                                Promotion: <%= @booking.tour.discount.name %> <%= @booking.tour.discount.percent %>%
                              </td>
                              <td>
                                <% if @booking.tour.vnd? %>
                                    <%= @booking.tour.price.round %> <%= t "tour.vnd" %>
                                  <% else %>
                                    <%= @booking.tour.price %> <%= t "tour.usd" %>
                                  <% end %>
                              </td>
                            </tr>
                          </tbody>
                        </table>
                      </div>
                      <!-- /.col -->
                    </div>
                    <!-- /.row -->

                    <div class="row">
                      <!-- accepted payments column -->
                      <div class="col-xs-6">
                        <p class="lead">Payment Methods:</p>
                        <%= image_tag "visa.png", alt: "Visa" %>
                        <%= image_tag "mastercard.png", alt: "Mastercard" %>
                        <%= image_tag "american-express.png", alt: "American Express" %>
                        <%= link_to booking_path(@booking, user_payment: "user_payment"), method: :patch do %>
                          <%= image_tag "paypal.png", alt: "Paypal" %>
                        <% end %>
                        <p class="text-muted well well-sm no-shadow" style="width: 500px; margin-top: 10px;">
                          Etsy doostang zoodles disqus groupon greplin oooj voxy zoodles, weebly ning heekya handango imeem plugg dopplr jibjab, movity jajah plickers sifteo edmodo ifttt zimbra.
                        </p>
                      </div>
                      <!-- /.col -->
                      <div class="col-xs-6">
                        <p class="lead">Amount Due <%= Time.now.strftime("%d-%m-%Y") %></p>
                        <div class="table-responsive">
                          <table class="table">
                            <tbody>
                              <tr>
                                <th style="width:50%">Price: </th>
                                <td>
                                  <% if @booking.tour.vnd? %>
                                    <%= (@booking.tour.price * @booking.visitors.count).round %> <%= t "tour.vnd" %>
                                  <% else %>
                                    <%= @booking.tour.price * @booking.visitors.count %> <%= t "tour.usd" %>
                                  <% end %>
                                </td>
                              </tr>
                              <tr>
                                <th>Discount: </th>
                                <td>
                                  <% if @booking.tour.vnd? %>
                                    <%= ((@booking.tour/100) * @booking.tour.discount.percent * @booking.visitors.count).round %> <%= t "tour.vnd" %>
                                  <% else %>
                                    <%= (@booking.tour.price/100) * @booking.tour.discount.percent * @booking.visitors.count %> <%= t "tour.usd" %>
                                  <% end %>
                                </td>
                              </tr>
                              <tr>
                                <th>Total:</th>
                                <td>
                                  <% if @booking.tour.vnd? %>
                                    <%= @booking.total_price.round %> <%= t "tour.vnd" %>
                                  <% else %>
                                    <%= @booking.total_price %> <%= t "tour.usd" %>
                                  <% end %>
                                </td>
                              </tr>
                            </tbody>
                          </table>
                        </div>
                      </div>
                      <!-- /.col -->
                    </div>
                    <!-- /.row -->
                  </section>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- /page content -->
    </div>
  </div>
</body>
<link href="/css/admin_main.css" rel="stylesheet">
