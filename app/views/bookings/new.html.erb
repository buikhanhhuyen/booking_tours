<% provide :title, t("booking.title") %>
<h1><%= t "booking.title" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3" id="booking_form">
    <h2>My Trip</h1>
    <div>
      <h4>Tour: <%= @tour.name %></h4>
      <h4>Starts in <%= @tour.start_place.name %> on <%= @tour.start_date.strftime("%d-%m-%Y") %></h4>
      <h4>Ends in <%= @tour.end_place.name %> on <%= @tour.end_date.strftime("%d-%m-%Y") %></h4>
    </div>
    <h3>Visitor Information</h3>
    <%= form_for [@tour, @booking] do |f| %>
      <%= render "shared/error_messages", object: @booking %>

      <%= f.fields_for :visitors do |builder| %>
        <%= render "visitor_fields", :f => builder %>
      <% end %>
      <p><%= link_to_add_fields t("visitor.add"), f, :visitors %></p>
      <p><%= f.submit t("submit") %></p>
    <% end %>
  </div>
</div>
