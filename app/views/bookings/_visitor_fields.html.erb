<link href="/css/admin_main.css" rel="stylesheet">

<div id="visitor">
  <div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
      <%= t("user_visitors.name") %> <span class="required">*</span>
    </label>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
      <%= t("user_visitors.gender") %> <span class="required">*</span>
    </label>
    <div class="col-md-3 col-sm-3 col-xs-12">
      <%= f.select :gender, Visitor.genders, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
      <%= t("user_visitors.birthday") %> <span class="required">*</span>
    </label>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <%= f.text_field :birthday, class: "form-control datetimepicker",
        value: "#{f.object.birthday.strftime("%d-%m-%Y") if f.object.birthday}" %>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
      <%= t("user_visitors.email") %> <span class="required">*</span>
    </label>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
      <%= link_to_remove_fields t("user_actions.delete"), f %>
    </label>
  </div>
</div>

<script src="/js/admin_main.js"></script>
