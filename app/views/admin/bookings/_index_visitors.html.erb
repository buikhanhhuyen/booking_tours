<table class="table sortable table-bordered">
  <thead>
    <tr>
      <th><%= t "admin_visitors.id" %></th>
      <th><%= t "admin_visitors.name" %></th>
      <th><%= t "admin_visitors.gender" %></th>
      <th><%= t "admin_visitors.birthday" %></th>
      <th><%= t "admin_visitors.email" %></th>
    </tr>
  </thead>
  <tbody>
    <% @visitors.each do |visitor| %>
      <tr>
        <td><%= visitor.id %></td>
        <td><%= visitor.name %></td>
        <td>
          <% if visitor.gender == false %>
            <%= t "admin_visitors.male" %>
          <% else %>
            <%= t "admin_visitors.female" %>
          <% end %>
        </td>
        <td><%= visitor.birthday.strftime("%d/%m/%Y") %></td>
        <td><%= visitor.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>
