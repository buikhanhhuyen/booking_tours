<% provide :title, t("admin_bookings.title") %>

<div class="">
  <div class="page-title">
    <div class="title_left">
      <h3><%= t "admin_bookings.title" %></h3>
    </div>
  </div>
  <div class="clearfix"></div>
  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="x_panel">
        <div class="x_title">
          <h2><%= t "admin_bookings.edit" %></h2>
          <ul class="nav navbar-right panel_toolbox">
            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
          </ul>
          <div class="clearfix"></div>
        </div>
        <div class="x_content">
          <br />
          <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
            <h4><%= t "admin_bookings.id" %>: <%= @booking.id %></h4>
            <h4><%= t "admin_bookings.tour" %>: <%= link_to @booking.tour.name, [:admin, @booking.tour] %></h4>
            <h4><%= t "admin_bookings.start" %> <%= @booking.tour.start_date.strftime("%d-%m-%Y") %> <%= t "admin_bookings.tai" %> <%= @booking.tour.start_place.name %></h4>
            <h4><%= t "admin_bookings.end" %> <%= @booking.tour.end_date.strftime("%d-%m-%Y") %> <%= t "admin_bookings.tai" %> <%= @booking.tour.end_place.name %></h4>
          </div>
          <%= form_for [:admin, @booking], html: {class: "form-horizontal form-label-left"} do |f| %>
            <div class="form-group">
              <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                <%= render "shared/error_messages", object: @booking %>
              </div>
            </div>

            <%= f.fields_for :visitors do |builder| %>
              <%= render "visitor_fields", :f => builder %>
            <% end %>
            <div class="form-group">
              <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                <%= link_to_add_fields t("admin_manage.create"), f, :visitors %>
              </label>
            </div>
            <div class="ln_solid"></div>
            <div class="form-group">
              <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                <%= link_to t("cancel"), admin_bookings_path, class: "btn btn-primary" %>
                <%= f.submit t("submit"), class: "btn btn-success" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
