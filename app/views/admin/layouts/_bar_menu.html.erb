<div class="col-md-3 left_col">
  <div class="left_col scroll-view">
    <div class="navbar nav_title" style="border: 0;">
      <%= link_to admin_static_pages_path, class: "site_title" do %>
        <i class="fa fa-paw"></i> <span>Dashbroard</span>
      <% end %>
    </div>

    <div class="clearfix"></div>

    <!-- menu profile quick info -->
    <div class="profile clearfix">
      <div class="profile_pic">
        <%= image_tag "7.jpg", class: "img-circle profile_img" %>
      </div>
      <div class="profile_info">
        <span>Welcome,</span>
        <h2><%= current_user.username %></h2>
      </div>
    </div>
    <!-- /menu profile quick info -->

    <br />

    <!-- sidebar menu -->
    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
      <div class="menu_section">
        <h3>General</h3>
        <ul class="nav side-menu">
          <li><a><i class="fa fa-home"></i> Categories <span class="fa fa-chevron-down"></span></a>
            <ul class="nav child_menu">
              <li><%= link_to "Create", new_admin_category_path %></li>
              <li><%= link_to "Index", admin_categories_path %></li>
            </ul>
          </li>
          <li><a><i class="fa fa-edit"></i> Places <span class="fa fa-chevron-down"></span></a>
            <ul class="nav child_menu">
              <li><%= link_to "Create", new_admin_place_path %></li>
              <li><%= link_to "Index", admin_places_path %></li>
            </ul>
          </li>
          <li><a><i class="fa fa-desktop"></i> Tours <span class="fa fa-chevron-down"></span></a>
            <ul class="nav child_menu">
              <li><%= link_to "Create", new_admin_tour_path %></li>
              <li><%= link_to "Index", admin_tours_path %></li>
            </ul>
          </li>
          <li><a><i class="fa fa-table"></i> Bookings <span class="fa fa-chevron-down"></span></a>
            <ul class="nav child_menu">
              <li><%= link_to "Index", admin_bookings_path %></li>
            </ul>
          </li>
          <li><a><i class="fa fa-bar-chart-o"></i> Discounts <span class="fa fa-chevron-down"></span></a>
            <ul class="nav child_menu">
              <li><%= link_to "Create", new_admin_discount_path %></li>
              <li><%= link_to "Index", admin_discounts_path %></li>
            </ul>
          </li>
          <li><a><i class="fa fa-user-o"></i>Users <span class="fa fa-chevron-down"></span></a>
            <ul class="nav child_menu">
              <li><%= link_to "Index", admin_users_path %></li>
            </ul>
          </li>
          <li><a><i class="fa fa-comment-o"></i> Reviews <span class="fa fa-chevron-down"></span></a>
            <ul class="nav child_menu">
              <li><%= link_to "Index", admin_reviews_path %></li>
            </ul>
          </li>
        </ul>
      </div>

    </div>
    <!-- /sidebar menu -->
  </div>
</div>

