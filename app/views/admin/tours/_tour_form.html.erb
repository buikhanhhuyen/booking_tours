<%= form_for [:admin, @tour] do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-group">
    <label class="col-md-4 control-label" for="tour_name">
      <%= t "tour.name" %>
    </label>

    <div class="col-md-8">
      <%= f.text_field :name, class: "form-control input-md", required: true,
        placeholder: "Enter name ..." %>
      <span class="help-block"><%= t "tour.enter_name" %></span>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-4 control-label" for="category_id">
      <%= t "category.title" %>
    </label>
    <div class="col-md-8">
      <%= f.select :category_id, @categories.collect{|c| [c.title, c.id]} %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-4 control-label" for="discount_id">
      <%= t "discount.title" %>
    </label>
    <div class="col-md-8">
      <%= f.select :discount_id, @discounts.collect{|d| [d.name, d.id]} %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-4 control-label" for="place_id">
      <%= t "tour.start_place" %>
    </label>
    <div class="col-md-8">
      <%= f.select :place_id, @places.collect{|p| [p.name, p.id]} %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-4 control-label" for="place_id">
      <%= t "tour.end_place" %>
    </label>
    <div class="col-md-8">
      <%= f.select :place_id, @places.collect{|p| [p.name, p.id]} %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-4 control-label" for="price">
      <%= t "tour.price" %>
    </label>

    <div>
      <div class="col-md-8">
        <%= f.text_field :price, class: "form-control", required: true,
          placeholder: "Enter price ..." %>
      </div>
      <select name="tour[currency]">
        <option value="vnd"><%= t "tour.vnd" %></option>
        <option value="usd"><%= t "tour.usd" %></option>
      </select>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-4 control-label" for="start_date">
      <%= t "tour.start_date" %>
    </label>
    <div>
      <div class="col-md-8">
        <%= f.text_field :start_date, class: "form-control datetimepicker" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-4 control-label" for="end_date">
      <%= t "tour.end_date" %>
    </label>
    <div>
      <div class="col-md-8">
        <%= f.text_field :end_date, class: "form-control datetimepicker" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-4 control-label" for="tour_min_visitors">
      <%= t "tour.min_visitors" %>
    </label>

    <div class="col-md-8">
      <%= f.text_field :min_visitors, class: "form-control input-md",
        required: true %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-4 control-label" for="tour_min_visitors">
      <%= t "tour.max_visitors" %>
    </label>

    <div class="col-md-8">
      <%= f.text_field :max_visitors, class: "form-control input-md",
      required: true %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-4 control-label" for="tour_accommodation">
      <%= t "tour.tour_accommodation" %>
    </label>

    <div class="col-md-8">
      <%= f.text_area :accommodation, class: "form-control", required: true,
        placeholder: "Enter accommodation ..." %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-4 control-label" for="tour_meals">
      <%= t "tour.tour_meals" %>
    </label>

    <div class="col-md-8">
      <%= f.text_area :meals, class: "form-control", required: true,
        placeholder: "Enter meals ..." %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-4 control-label" for="tour_transport">
      <%= t "tour.tour_transport" %>
    </label>

    <div class="col-md-8">
      <%= f.text_area :transport, class: "form-control", required: true,
        placeholder: "Enter transport ..." %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-4 control-label" for="tour_additional_services">
      <%= t "tour.tour_services" %>
    </label>

    <div class="col-md-8">
      <%= f.text_area :additional_services, class: "form-control",
        required: true, placeholder: "Enter additional services ..." %>
    </div>
  </div>

  <div class="text-center">
    <%= f.submit t("save"), class: "btn btn-primary" %>
    <%= link_to t("cancel"), admin_places_path, class: "btn btn-danger" %>
  </div>
<% end %>
