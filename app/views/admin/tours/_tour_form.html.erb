<%= form_for [:admin, @tour], html: {class: "form-horizontal form-label-left"} do |f| %>
  <div class="form-group">
    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
      <%= render "shared/error_messages", object: f.object %>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
      <%= t "admin_tours.name" %> <span class="required">*</span>
    </label>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <%= f.text_field :name, class: "form-control", required: true,
        placeholder: "Vui lòng nhập tên tour du lịch..." %>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
      <%= t "admin_categories.title" %> <span class="required">*</span>
    </label>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <select class="select2_single form-control" tabindex="-1" id="tour_category_id" name="tour[category_id]">
        <option></option>
        <% @categories.each do |category| %>
          <option value="<%= category.id %>"><%= category.title %></option>
        <% end %>
      </select>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
      <%= t "admin_bookings.discount" %> <span class="required">*</span>
    </label>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <select class="select2_single form-control" tabindex="-1" id="tour_discount_id" name="tour[discount_id]">
        <option></option>
        <% @discounts.each do |discount| %>
          <option value="<%= discount.id %>"><%= discount.name %></option>
        <% end %>
      </select>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
      <%= t "admin_tours.start_place" %> <span class="required">*</span>
    </label>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <select class="select2_single form-control" tabindex="-1" id="tour_start_place_id" name="tour[start_place_id]">
        <option></option>
        <% @places.each do |place| %>
          <option value="<%= place.id %>"><%= place.name %></option>
        <% end %>
      </select>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
      <%= t "admin_tours.end_place" %> <span class="required">*</span>
    </label>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <select class="select2_single form-control" tabindex="-1" id="tour_end_place_id" name="tour[end_place_id]">
        <option></option>
        <% @places.each do |place| %>
          <option value="<%= place.id %>"><%= place.name %></option>
        <% end %>
      </select>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
      <%= t "admin_tours.price" %> <span class="required">*</span>
    </label>
    <div class="col-md-4 col-sm-6 col-xs-12">
      <%= f.text_field :price, class: "form-control", required: true,
        placeholder: "Vui lòng nhập giá tiền..." %>
    </div>
    <div class="col-md-2">
      <select name="tour[currency]", class="form-control">
        <option value="vnd">VNĐ</option>
        <option value="usd">USD</option>
      </select>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
      <%= t "admin_tours.date" %><span class="required">*</span>
    </label>
    <div class="col-md-3 col-sm-6 col-xs-12">
      <%= f.text_field :start_date, class: "form-control datetimepicker",
        placeholder: "Ngày bắt đầu..." %>
    </div>
    <div class="col-md-3 col-sm-6 col-xs-12">
      <%= f.text_field :end_date, class: "form-control datetimepicker",
        placeholder: "Ngày kết thúc..." %>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
      <%= t "admin_tours.num" %><span class="required">*</span>
    </label>
    <div class="col-md-3 col-sm-6 col-xs-12">
      <%= f.text_field :min_visitors, class: "form-control",
        required: true, placeholder: "SL tối thiểu" %>
    </div>
    <div class="col-md-3 col-sm-6 col-xs-12">
      <%= f.text_field :max_visitors, class: "form-control",
        required: true, placeholder: "SL tối đa" %>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
      <%= t "admin_tours.accommodation" %> <span class="required">*</span>
    </label>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <%= f.text_area :accommodation, class: "form-control", required: true,
        placeholder: "Vui lòng nhập thông tin chỗ ở..." %>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
      <%= t "admin_tours.meals" %> <span class="required">*</span>
    </label>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <%= f.text_area :meals, class: "form-control", required: true,
        placeholder: "Vui lòng nhập thông tin bữa ăn..." %>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
      <%= t "admin_tours.transport" %> <span class="required">*</span>
    </label>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <%= f.text_area :transport, class: "form-control", required: true,
        placeholder: "Vui lòng nhập thông tin phương tiện đi lại..." %>
    </div>
  </div><div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
      <%= t "admin_tours.service" %> <span class="required">*</span>
    </label>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <%= f.text_area :additional_services, class: "form-control",
        required: true, placeholder: "Vui lòng nhập thông tin dịch vụ đi kèm..." %>
    </div>
  </div>
  <div class="ln_solid"></div>
  <div class="form-group">
    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
      <%= f.submit t("save"), class: "btn btn-success" %>
    <%= link_to t("cancel"), admin_places_path, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
<!-- Select2 -->
  <script>
    $(document).ready(function() {
      $(".select2_single").select2({
        placeholder: "Please select ...",
        allowClear: true
      });
      $(".select2_group").select2({});
      $(".select2_multiple").select2({
        maximumSelectionLength: 4,
        placeholder: "With Max Selection limit 4",
        allowClear: true
      });
    });
  </script>
<!-- /Select2 -->
