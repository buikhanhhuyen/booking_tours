<% provide :title, t("tour.title") %>
<h1 class="text-center"><%= t "tour.title" %></h1><br>
<div class="row">
  <div class="col-md-6 center">
    <%= link_to t("tour.add"), new_admin_tour_path,
      class: "btn btn-success glyphicon glyphicon-plus" %>
  </div>
</div>
<table class="table sortable table-bordered">
  <thead>
    <tr>
      <th><%= t "tour.id" %></th>
      <th><%= t "tour.name" %></th>
      <th><%= t "tour.description" %></th>
      <th><%= t "tour.price" %></th>
      <th><%= t "tour.rating" %></th>
      <th><%= t "tour.startDate" %></th>
      <th><%= t "tour.endDate" %></th>
      <th><%= t "tour.status" %></th>
      <th><%= t "tour.action" %></th>
    </tr>
  </thead>
  <tbody>
    <% @tours.each do |tour| %>
      <tr>
        <td><%= tour.id %></td>
        <td><%= link_to tour.name, admin_tour_path(tour) %></td>
        <td><%= tour.description %></td>
        <td><%= tour.price %></td>
        <td><%= tour.rating %></td>
        <td><%= tour.startDate.to_time.strftime("%d-%m-%Y") %></td>
        <td><%= tour.endDate.to_time.strftime("%d-%m-%Y") %></td>
        <td><%= tour.status %></td>
        <td>
          <%= link_to t("edit"), edit_admin_tour_path(tour),
            class: "btn btn-primary" %>
          <%= link_to t("delete"), [:admin, tour], method: :delete,
            data: {confirm: t("sure")}, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
