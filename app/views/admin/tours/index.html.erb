<% provide :title, t("admin_tours.title") %>
<div class="">
  <div class="page-title">
    <div class="title_left">
      <h3><% t "admin_tours.title" %></h3>
    </div>
  </div>
  <div class="clearfix"></div>

  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="x_panel">
        <div class="x_title">
          <h2><%= t "admin_tours.all" %>
            <%= link_to t("admin_manage.create"), new_admin_tour_path,
            class: "btn btn-success btn-xs glyphicon glyphicon-plus" %></h2>
          <ul class="nav navbar-right panel_toolbox">
            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
          </ul>
          <div class="clearfix"></div>
        </div>
        <div class="x_content">
          <table id="categories-table" class="table table-striped table-bordered">
            <thead>
              <tr>
                <th><%= t "admin_tours.id" %></th>
                <th><%= t "admin_tours.name" %></th>
                <th><%= t "admin_tours.place" %></th>
                <th><%= t "admin_tours.date" %></th>
                <th><%= t "admin_tours.price" %></th>
                <th><%= t "admin_tours.num" %></th>
                <th><%= t "admin_manage.action" %></th>
            </thead>
            <tbody>
              <% @tours.each do |tour| %>
                <tr>
                  <td><%= tour.id %></td>
                  <td><%= link_to tour.name, admin_tour_path(tour) %></td>
                  <td><%= tour.start_place.name %> - <%= tour.end_place.name %></td>
                  <td><%= tour.start_date.strftime("%d/%m/%Y") %> - <%= tour.end_date.strftime("%d/%m/%Y") %></td>
                  <td>
                    <% if tour.vnd? %>
                      <%= tour.price.round %> <%= t "vnd" %>
                    <% else %>
                      <%= t "usd" %><%= tour.price.round(2) %>
                    <% end %>
                  </td>
                  <td><%= tour.min_visitors %> - <%= tour.max_visitors %></td>
                  <td>
                    <%= link_to edit_admin_tour_path(tour), class: "btn btn-round btn-info btn-xs" do %>
                      <i class="fa fa-pencil-square-o "></i><%= t "admin_manage.edit" %>
                    <% end %>
                    <%= link_to [:admin, tour], method: :delete, class: "btn btn-round btn-danger btn-xs" do %>
                      <i class="fa fa-times"></i><%= t "admin_manage.delete" %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function () {
    //DataTable
    $('#categories-table').DataTable();
  })
</script>
