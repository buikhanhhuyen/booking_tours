<% provide :title, t("admin_places.title") %>
<div class="">
  <div class="page-title">
    <div class="title_left">
      <h3><%= t "admin_places.title" %></h3>
    </div>
  </div>
  <div class="clearfix"></div>

  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="x_panel">
        <div class="x_title">
          <h2><%= t "admin_places.all" %><%= link_to t("admin_manage.create"), new_admin_place_path,
            class: "btn btn-success btn-xs glyphicon glyphicon-plus" %></h2>
          <ul class="nav navbar-right panel_toolbox">
            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
          </ul>
          <div class="clearfix"></div>
        </div>
        <div class="x_content">
          <table id="places-table" class="table table-striped table-bordered">
            <thead>
              <tr>
                <th><%= t "admin_places.id" %></th>
                <th><%= t "admin_places.name" %></th>
                <th><%= t "admin_places.description" %></th>
                <th><%= t "admin_manage.action" %></th>
            </thead>
            <tbody>
              <% @places.each do |place| %>
                <tr>
                  <td><%= place.id %></td>
                  <td><%= place.name %></td>
                  <td style="width:60%"><%= place.description %></td>
                  <td>
                    <%= link_to edit_admin_place_path(place), class: "btn btn-round btn-info btn-xs" do %>
                      <i class="fa fa-pencil-square-o "></i><%= t "admin_manage.edit" %>
                    <% end %>
                    <%= link_to [:admin, place], method: :delete, data: {confirm: t("sure")}, class: "btn btn-round btn-danger btn-xs" do %>
                      <i class="fa fa-times"></i><%= t "admin_manage.delete" %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function () {
    //DataTable
    $('#places-table').DataTable();
  })
</script>
