<% provide :title, t("admin_discounts.title") %>
<div class="">
  <div class="page-title">
    <div class="title_left">
      <h3><%= t "admin_discounts.title" %></h3>
    </div>
  </div>
  <div class="clearfix"></div>
  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="x_panel">
        <div class="x_title">
          <h2><%= t "admin_discounts.edit" %></h2>
          <ul class="nav navbar-right panel_toolbox">
            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
          </ul>
          <div class="clearfix"></div>
        </div>
        <div class="x_content">
          <br />
          <%= form_for [:admin, @discount], html: {class: "form-horizontal form-label-left"} do |f| %>
            <div class="form-group">
              <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                <%= render "shared/error_messages", object: @discount %>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                <%= t "admin_discounts.name" %><span class="required">*</span>
              </label>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%= f.text_field :name, class: "form-control col-md-7 col-xs-12", required: true %>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                <%= t "admin_discounts.percent" %><span class="required">*</span>
              </label>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%= f.text_field :percent, class: "form-control col-md-7 col-xs-12", required: true %>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                <%= t "admin_discounts.description" %><span class="required">*</span>
              </label>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%= f.text_area :description, class: "form-control", required: true %>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                <%= t "admin_discounts.start_date" %><span class="required">*</span>
              </label>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%= f.text_field :start_date, class: "form-control datetimepicker",
                  value: "#{f.object.start_date.strftime("%d-%m-%Y") if f.object.start_date}" %>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                <%= t "admin_discounts.end_date" %><span class="required">*</span>
              </label>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%= f.text_field :end_date, class: "form-control datetimepicker",
                  value: "#{f.object.end_date.strftime("%d-%m-%Y") if f.object.end_date}" %>
              </div>
            </div>
            <div class="ln_solid"></div>
            <div class="form-group">
              <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                <%= f.submit t("save"), class: "btn btn-success" %>
                <%= link_to t("cancel"), admin_places_path, class: "btn btn-primary" %>
              </div>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

