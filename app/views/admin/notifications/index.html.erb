<% provide :title, "Thong bao" %>
<div class="">
  <div class="page-title">
    <div class="title_left">
      <h3><%= t "admin_notify.title" %></h3>
    </div>
  </div>
  <div class="clearfix"></div>

  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="x_panel">
        <div class="x_title">
          <h2><%= t "admin_notify.all" %></h2>
          <ul class="nav navbar-right panel_toolbox">
            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
          </ul>
          <div class="clearfix"></div>
        </div>
        <div class="x_content">
          <table id="users-table" class="table table-striped table-bordered">
            <thead>
              <tr>
                <th><%= t "admin_reviews.id" %></th>
                <th><%= "Vao luc" %></th>
            </thead>
            <tbody>
              <% @notifications.each do |noti|%>
                <% if noti.notifiable_type == "Review" %>
                  <tr>
                    <td><strong><%= noti.user.username %></strong> da them bai nhan xet ve dia diem: <%= Place.find_by_id(noti.notifiable_id).name %></td>
                    <td><%= noti.created_at %></td>
                  </tr>
                <% elsif noti.notifiable_type == "Booking" %>
                  <tr>
                    <td><strong><%= noti.user.username %></strong> da dat tour: <%= Tour.find_by_id(noti.notifiable_id).name %></td>
                    <td><%= noti.created_at %></td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function () {
    //DataTable
    $('#users-table').DataTable();
  })
</script>
