
<link href="/css/admin_main.css" rel="stylesheet">

<%= search_form_for @search, url: search_places_path, method: :post  do |f| %>
  <div class="field">
    <%= f.label :name_cont, t("name_cont") %>
    <%= f.text_field :name_cont %>
  </div>
  <div class="action"><%= f.submit t "search" %></div>
<% end %>

<div class="container body">
  <div class="main_container">
    <div class="right_col" role="main">
      <div class="">
        <div class="page-title">
          <div class="title_left">
            <h3> All Destinations </h3>
          </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
          <div class="col-md-12">
            <div class="x_panel">
              <div class="x_title">
                <div class="clearfix"></div>
              </div>
              <div class="x_content">
                <div class="row">
                  <% @places.each do |place| %>
                    <div class="col-md-3">
                      <div class="thumbnail">
                        <div class="image view view-first">
                          <%= image_tag "media.jpg", alt: "image", style: "width: 100%; height: 100%; display: block;" %>
                          <div class="mask">
                            <h1><strong><%= place.name %></strong></h1>
                            <div class="tools tools-bottom">
                              <%= link_to "Read more", place_path(place), class: "btn btn-primary" %>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="/js/admin_main.js"></script>


