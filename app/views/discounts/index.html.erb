<link href="/css/admin_main.css" rel="stylesheet">

<div class="container body">
  <div class="main_container">

    <!-- page content -->
    <div class="right_col" role="main">
      <div class="">

        <div class="clearfix"></div>

        <div class="row">
          <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
              <div class="x_title">
                <h2><strong><%= t "user_discounts.all" %></strong></h2>
                <div class="clearfix"></div>
              </div>

              <div class="x_content">
                <div class="row">
                  <div class="col-md-12">
                    <% @discounts.each do |discount| %>
                    <div class="col-md-3 col-sm-6 col-xs-12">
                      <div class="pricing ui-ribbon-container">
                        <div class="ui-ribbon-wrapper">
                          <div class="ui-ribbon">
                            <%= discount.percent %>% Off
                          </div>
                        </div>
                        <div class="title">
                          <h1><strong><%= discount.name %></strong></h1>
                          <h4 style="padding-top:10px;"><%= t "user_discounts.title" %></h4>
                        </div>
                        <div class="x_content" style="color:black;">
                          <div class="">
                            <div class="pricing_features" style="background:#e1ecf7">
                              <ul class="list-unstyled text-left">
                                <li class="text-center" style="color:blue"><strong><%= discount.start_date.strftime("%d/%m/%Y") %> - <%= discount.end_date.strftime("%d/%m/%Y") %></strong></li>
                                <li><i class="fa fa-check text-success"></i><%= t "user_discounts.saleoff" %>: <strong><%= discount.percent %>%</strong></li>
                                <li><i class="fa fa-check text-success"></i> <strong><%= t "user_discounts.description" %>: </strong><%= truncate(discount.description, length: 100) %></li>
                                <li><i class="fa fa-check text-success"></i><%= t "user_discounts.all_time" %><strong> <%= t "user_discounts.update" %></strong></li>
                                <li><i class="fa fa-times text-danger"></i> <strong><%= t "user_discounts.noo" %></strong> <%= t "user_discounts.fee" %></li>
                              </ul>
                            </div>
                          </div>
                          <div class="pricing_footer">
                            <%= link_to t("user_discounts.view_detail"), discount_path(discount), class: "btn btn-primary btn-block" %>
                          </div>
                        </div>
                      </div>
                    </div>
                    <% end %>

                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- /page content -->
  </div>
</div>
<script src="/js/admin_main.js"></script>
