<div class="row col-md-4 col-md-offset-4">
  <h2>Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, url: registration_path(resource_name),
    as: resource_name, html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :username %><br />
      <%= f.text_field :username, autofocus: true, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>
        Currently waiting confirmation for: <%= resource.unconfirmed_email %>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :password %>
        <i><%= t "edit_user.password" %></i><br />
      <%= f.password_field :password, autocomplete: "off",
        class: "form-control" %>
      <% if @minimum_password_length %>
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off",
        class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :current_password %>
        <i><%= t "edit_user.current_password" %></i><br />
      <%= f.password_field :current_password, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit t("edit_user.update"), class: "btn btn-primary" %>
    </div>
  <% end %>

  <h3><%= t "delete_user.cancel" %></h3>

  <p><%= t "delete_user.unhappy" %><%= button_to t("delete_user.cancel"),
    registration_path(resource_name), data: { confirm: t("delete_user.unhappy")},
    method: :delete %></p>

  <%= link_to t("delete_user.back"), :back %>
</div>
